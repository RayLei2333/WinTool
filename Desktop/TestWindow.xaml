<Window x:Class="Desktop.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        
        <StackPanel Orientation="Vertical">
            <WrapPanel x:Name="wrapper">
                <Button x:Name="fileRightMenuBtn" Width="100" Height="40" Click="fileRightMenuBtn_Click">文件右键菜单</Button>
                <Button x:Name="folderRightMenuBtn" Width="100" Height="40" Click="folderRightMenuBtn_Click">文件夹右键菜单</Button>
                <Button x:Name="desktopRightMenuBtn" Width="100" Height="40" Click="desktopRightMenuBtn_Click">桌面右键菜单</Button>
                <Button x:Name="folderWatchBtn" Width="100" Height="40" Click="folderWatchBtn_Click">文件夹监听</Button>
                <Button x:Name="folderIconBtn" Width="100" Height="40" Click="folderIconBtn_Click">提取文件夹图标</Button>
                <Button x:Name="fileLnkIconBtn" Width="100" Height="40" Click="fileLnkIconBtn_Click">提取快捷方式图标</Button>
                <Button x:Name="thumbnailBtn" Width="100" Height="40" Click="thumbnailBtn_Click">获取图像文件缩略图</Button>
                <Button x:Name="defaultFileIconBtn" Width="100" Height="40" Click="defaultFileIconBtn_Click">获取文件默认图标</Button>
                <Button x:Name="desktopIconSizelBtn" Width="100" Height="40" Click="desktopIconSizelBtn_Click">获取桌面图标大小</Button>
                <Button x:Name="pailieBtn" Width="100" Height="40" Click="pailieBtn_Click">获取自动排列图标和与网格对齐</Button>
                <Button x:Name="allImageFormatBtn" Width="100" Height="40" Click="allImageFormatBtn_Click">获取所有图片编码格式</Button>
                <Button x:Name="desktopAllFileBtn" Width="100" Height="40" Click="desktopAllFileBtn_Click">获取桌面所有文件</Button>

            </WrapPanel>
            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <TextBlock Text="文件监听日志"></TextBlock>
                <TextBox x:Name="log" MaxHeight="300"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
